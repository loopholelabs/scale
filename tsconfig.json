{
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "target", "**/*.go", "**/*.rs", "*.go", "*.rs"],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "paths": {
      "scale": ["./"]
    },
    "types": ["node", "jest"]
  },
}
