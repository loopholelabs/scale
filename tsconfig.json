{
  "include": ["ts/**/*.ts"],
  "exclude": ["node_modules", "ts/**/*.test.ts", "ts/tests"],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "paths": {
      "scale-ts": ["./ts"]
    },
    "types": ["node", "jest"]
  },
}